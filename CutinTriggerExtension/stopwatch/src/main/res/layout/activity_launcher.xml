<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <com.garlicg.sample.stopwatchtrigger.widget.LazyTimerView
        android:id="@+id/Timer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/StartStop"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="Start"
        android:onClick="onStartStopClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:onClick="onResetClick"
        android:text="Reset"
        />

    <TextView
        android:id="@+id/ManagerLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@android:drawable/list_selector_background"
        android:gravity="right"
        android:padding="8dp"
        android:text="CUT-IN Manager"
        android:textColor="#1111EE"
        android:textSize="13sp"
        android:onClick="onManagerClick"
        />

    <TextView
        android:id="@+id/LibraryLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@android:drawable/list_selector_background"
        android:gravity="right"
        android:padding="8dp"
        android:text="CutinTriggerExtension (github)"
        android:textColor="#1111EE"
        android:textSize="13sp"
        android:onClick="onLibraryClick"
        />


</LinearLayout>
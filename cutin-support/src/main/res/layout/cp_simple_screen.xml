<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:paddingTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/cpDialogFrame"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_height="wrap_content"
            android:minHeight="60dp">

            <TextView
                android:paddingTop="8dp"
                android:id="@+id/title"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="?attr/cpTextColor"
                android:textSize="@dimen/cs_text_size_medium"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/cpDividerHorizontal" />

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:listSelector="?attr/cpSelectorOverlay"
            android:scrollingCache="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/cpDividerHorizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:showDividers="middle"
            android:orientation="horizontal"
            android:divider="?attr/cpDividerVertical"
            android:dividerPadding="12dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@android:id/button1"
                android:background="?attr/cpSelectorOverlay"
                android:layout_width="0px"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:textSize="@dimen/cs_text_size_dialog_button"
                android:textColor="?attr/cpTextColor"
                android:gravity="center"
                android:text="@string/cutin_option" />

            <TextView
                android:background="?attr/cpSelectorOverlay"
                android:id="@android:id/button2"
                android:layout_width="0px"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:textSize="@dimen/cs_text_size_dialog_button"
                android:textColor="?attr/cpTextColor"
                android:gravity="center"
                android:text="@string/cutin_register" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>


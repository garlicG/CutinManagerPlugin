<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="CutinPanelTheme">
        <attr name="cpDialogFrame" format="color|reference" />
        <attr name="cpTextColor" format="color|reference" />
        <attr name="cpCategoryTextColor" format="color|reference" />
        <attr name="cpCategoryBackground" format="color|reference" />
        <attr name="cpSelectorOverlay" format="color|reference" />
        <attr name="cpListChoiceIndicatorSingle" format="color|reference" />
        <attr name="cpDividerVertical" format="reference" />
        <attr name="cpDividerHorizontal" format="color|reference" />
    </declare-styleable>

    <style name="CutinPanel" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CutinPanel.Light" parent="CutinPanel">
        <item name="cpDialogFrame">@drawable/cutin_dialog_light</item>
        <item name="cpTextColor">@color/cutin_text_light</item>
        <item name="cpCategoryTextColor">#686868</item>
        <item name="cpCategoryBackground">@drawable/cutin_category_background_light</item>
        <item name="cpListChoiceIndicatorSingle">@drawable/cutin_btn_radio_holo_light</item>
        <item name="cpSelectorOverlay">@drawable/cutin_selector_overlay_light</item>
        <item name="cpDividerVertical">@drawable/cutin_divider_vertical_light</item>
        <item name="cpDividerHorizontal">#E8E8E8</item>
    </style>

    <style name="CutinPanel.Dark" parent="CutinPanel">
        <item name="cpDialogFrame">@drawable/cutin_dialog_dark</item>
        <item name="cpTextColor">@color/cutin_text_dark</item>
        <item name="cpCategoryTextColor">#A8A8A8</item>
        <item name="cpCategoryBackground">@drawable/cutin_category_background_dark</item>
        <item name="cpListChoiceIndicatorSingle">@drawable/cutin_btn_radio_holo_dark</item>
        <item name="cpSelectorOverlay">@drawable/cutin_selector_overlay_dark</item>
        <item name="cpDividerVertical">@drawable/cutin_divider_vertical_dark</item>
        <item name="cpDividerHorizontal">#484848</item>

    </style>

</resources>